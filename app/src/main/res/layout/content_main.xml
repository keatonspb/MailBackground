<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.discode.gmailbackground.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/bt_send_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_plain_text_email" />

    <Button
        android:id="@+id/bt_send_html"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_html_email" />

    <Button
        android:id="@+id/bt_send_attachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_email_with_attachment" />

</LinearLayout>
